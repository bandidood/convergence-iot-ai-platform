FROM nginx:alpine

# Copy des fichiers web
COPY demo/ /usr/share/nginx/html/

# Configuration nginx custom
COPY nginx.conf /etc/nginx/nginx.conf

# Page de sant√©
RUN echo '<html><body>OK</body></html>' > /usr/share/nginx/html/health.html

# Permissions
RUN chown -R nginx:nginx /usr/share/nginx/html

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]