# =============================================================================
# CONFIGURATION PRODUCTION - Station Traffeyère IoT/AI Platform
# Copier vers .env et modifier les valeurs pour votre déploiement
# =============================================================================

# =============================================================================
# DOMAINES ET SSL
# =============================================================================
DOMAIN_ROOT=traffeyere-station.fr
ACME_EMAIL=admin@traffeyere-station.fr

# =============================================================================
# SÉCURITÉ ET AUTHENTIFICATION
# =============================================================================
SECRET_KEY=your-super-secret-key-change-me-in-production-min-32-chars
JWT_SECRET=your-jwt-secret-key-change-me-also-min-32-chars

# =============================================================================
# BASE DE DONNÉES POSTGRESQL
# =============================================================================
POSTGRES_DB=station_traffeyere
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-postgres-password

# Base Grafana dans PostgreSQL
GRAFANA_DB_PASSWORD=your-secure-grafana-db-password

# =============================================================================
# TIME-SERIES DATABASE INFLUXDB
# =============================================================================
INFLUX_USERNAME=admin
INFLUX_PASSWORD=your-secure-influxdb-password
INFLUX_ORG=traffeyere
INFLUX_BUCKET=iot_sensors
INFLUX_ADMIN_TOKEN=your-influxdb-admin-token-change-me

# =============================================================================
# CACHE REDIS
# =============================================================================
REDIS_PASSWORD=your-secure-redis-password

# =============================================================================
# MESSAGE BROKER MQTT
# =============================================================================
MQTT_USERNAME=iot_user
MQTT_PASSWORD=your-secure-mqtt-password

# =============================================================================
# MONITORING ET OBSERVABILITÉ
# =============================================================================
GRAFANA_ADMIN_PASSWORD=your-secure-grafana-admin-password
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# =============================================================================
# PROVIDERS IA EXTERNES
# =============================================================================
# OpenAI GPT-4
OPENAI_API_KEY=sk-your-openai-api-key

# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# Google Gemini
GOOGLE_API_KEY=your-google-api-key

# Perplexity AI
PERPLEXITY_API_KEY=pplx-your-perplexity-api-key

# =============================================================================
# CONFIGURATION MÉTIER
# =============================================================================
# Paramètres station
STATION_ID=TRAFFEYERE_001
STATION_NAME=Station Traffeyère
STATION_LOCATION=45.764043,4.835659

# Seuils alertes par défaut
TEMP_ALERT_THRESHOLD=35.0
PRESSURE_ALERT_THRESHOLD=2.5
PH_ALERT_THRESHOLD_MIN=6.0
PH_ALERT_THRESHOLD_MAX=8.5

# Paramètres IA/ML
AI_CONFIDENCE_THRESHOLD=0.85
ANOMALY_DETECTION_WINDOW=3600
MODEL_UPDATE_INTERVAL=86400

# =============================================================================
# CONFIGURATION DÉVELOPPEMENT (ne pas utiliser en production)
# =============================================================================
# DEBUG=false
# LOG_LEVEL=INFO
# ENABLE_CORS=false

# =============================================================================
# COOLIFY SPÉCIFIQUE
# =============================================================================
# Ces variables seront automatiquement gérées par Coolify
# COOLIFY_APP_ID=
# COOLIFY_ENVIRONMENT_ID=
# COOLIFY_BUILD_ID=

# =============================================================================
# INSTRUCTIONS DE DÉPLOIEMENT
# =============================================================================
# 1. Copier ce fichier vers .env
# 2. Modifier toutes les valeurs marquées "change-me"  
# 3. Générer des clés sécurisées : openssl rand -hex 32
# 4. Configurer les domaines DNS vers votre serveur
# 5. Lancer : docker-compose -f docker-compose.prod.yml up -d