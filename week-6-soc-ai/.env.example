# Configuration SOC IA-Powered - Station Traffeyère
# Copiez ce fichier vers .env et adaptez les valeurs

# Base de données
SOC_DATABASE_PATH=data/soc_database.db
THREAT_INTEL_DATABASE_PATH=data/threat_intelligence.db

# Dashboard
SOC_DASHBOARD_HOST=0.0.0.0
SOC_DASHBOARD_PORT=8000

# Threat Intelligence APIs
VIRUSTOTAL_API_KEY=your-virustotal-api-key-here
MISP_API_KEY=your-misp-api-key-here
MISP_URL=http://localhost:8080

# ANSSI CERT-FR
ANSSI_FEEDS_URL=https://www.cert.ssi.gouv.fr/feeds/

# Performance
TARGET_MTTR_MINUTES=11.3
COMPLIANCE_THRESHOLD=80

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/soc.log

# Sécurité
SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
TOKEN_EXPIRE_HOURS=24

# SOAR Configuration
SOAR_MAX_EXECUTION_TIME=300
SOAR_AUTOMATION_LEVEL=full

# Machine Learning
ML_MODEL=IsolationForest
ML_CONTAMINATION=0.1
ML_TRAINING_SAMPLES=1000
